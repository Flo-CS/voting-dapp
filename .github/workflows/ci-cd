name: CI-CD

on:
  push:
    branches: [ "main" ]
  pull_request:
    branches: [ "main" ]
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout ğŸ›ï¸
        uses: actions/checkout@v3
      - name: Install and build ğŸ”§
        run: |
          npm ci
          npm run build
  deploy:
     needs: build
      permissions:
        pages: write
        id-token: write
  
      environment:
        name: github-pages
        url: ${{ steps.deployment.outputs.page_url }}
    
      runs-on: ubuntu-latest
      steps:
        - name: Deploy to GitHub Pages ğŸš€
          id: deployment
          uses: actions/deploy-pages@v2
